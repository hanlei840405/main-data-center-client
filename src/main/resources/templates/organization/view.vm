<link href="css/jquery.datetimepicker.css" rel="stylesheet">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">人员信息-查看</h4>
        </div>
        <div class="modal-body">
            <!-- Profile Menu -->
            <div class="side-widgets text-center s-widget m-b-25" style="float:none;width: auto">
                <img class="profile-pic animated" src="ext/$!{user.photo}" alt="">
            </div>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label">姓名</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.realName}"/>
                    </div>

                    <label class="col-md-2 control-label">出生日期</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!dateTool.format('yyyy-MM-dd',$!user.birthday)"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">性别</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="#if($!user.sex == 'F')女#else 男#end"/>

                    </div>

                    <label class="col-md-2 control-label">联系电话</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.telephone}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">邮箱</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.email}"/>
                    </div>

                    <label class="col-md-2 control-label">QQ</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.qq}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">微信</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.wx}"/>
                    </div>

                    <label class="col-md-2 control-label">微博</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.weiBo}"/>
                    </div>
                </div>
                <div class="form-group">

                    <label class="col-md-2 control-label">等级</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="$!{user.level}"/>
                    </div>

                    <label class="col-md-2 control-label">状态</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" disabled
                               value="#if($!user.status == '1')在职#else 离职#end"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-alt" data-dismiss="modal">关闭</button>
        </div>
    </div>
</div>
<script src="js/module/user/view.js"></script>
