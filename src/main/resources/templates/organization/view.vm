<link href="css/jquery.datetimepicker.css" rel="stylesheet">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">人员信息-查看</h4>
        </div>
        <div class="modal-body">
            <!-- Profile Menu -->
            <div class="side-widgets text-center s-widget m-b-25" style="float:none;width: auto">
                <img class="profile-pic animated" src="ext/$!{user.photo}" alt="">
            </div>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="code" class="col-md-2 control-label">编号</label>

                    <div class="col-md-4">
                        <input type="text" class="form-control input-sm" id="code" name="code"
                               placeholder="..." value="$!organization.code">
                    </div>

                    <label for="name" class="col-md-2 control-label">名称</label>

                    <div class="col-md-4">
                        <input type="text" class="form-control input-sm" id="name" name="name"
                               placeholder="...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullPath" class="col-md-2 control-label">全路径编号</label>

                    <div class="col-md-4">
                        <input type="text" class="form-control input-sm" id="fullPath" name="fullPath" readonly>
                    </div>

                    <label for="fullName" class="col-md-2 control-label">全路径名称</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" id="fullName" name="fullName" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="qq" class="col-md-2 control-label">部门负责人</label>

                    <div class="col-md-4">
                        <input type="input" class="form-control input-sm" id="userName" placeholder="...">
                        <input type="hidden" id="userId" name="user.id" placeholder="...">
                        <button type="button" class="btn btn-sm btn-alt" id="selectUser">选择</button>
                    </div>

                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-alt" data-dismiss="modal">关闭</button>
        </div>
    </div>
</div>
<script src="js/module/user/view.js"></script>
