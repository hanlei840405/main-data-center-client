<style>
</style>
<div class="block-area">
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">企业管理</a></li>
        <li class="active">企业列表</li>
        <li><a href="javascript:void(0)" data-toggle="modal"
               onclick="openModuleInModal('formModal', '/corporation/add')">新增</a>
        </li>
        <li><a href="javascript:void(0)" onclick="deleteSelected()">删除</a></li>
    </ol>
    <input class="input-sm col-md-4 message-search table-payload" type="text" placeholder="Search....">
    <table id="corporation-grid" class="table table-condensed table-hover table-striped tile list-container">
        <thead>
        <tr>
            <th><input type="checkbox" class="pull-left list-parent-check" value=""></th>
            <th>序号</th>
            <th>类别</th>
            <th>企业名称</th>
            <th>企业联系人</th>
            <th>企业联系人电话</th>
            <th>法人</th>
            <th>法人电话</th>
            <th>企业地址</th>
            <th>等级</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
            #foreach($item in $page.result)
            <tr>
                <td><input type="checkbox" class="pull-left list-check" value="$item.id"></td>
                <td>$!velocityCount</td>
                <td>$!item.category</td>
                <td>$!item.name</td>
                <td>$!item.contact</td>
                <td>$!item.contactTelephone</td>
                <td>$!item.legelPerson</td>
                <td>$!item.legelPersonTelephone</td>
                <td>$!item.address</td>
                <td>
                    #if($!item.level == 'A')
                        普通会员
                    #elseif($!item.level == 'B')
                        铜牌会员
                    #elseif($!item.level == 'C')
                        银牌会员
                    #else
                        金牌会员
                    #end
                </td>
                <td>
                    #if($!item.status == '0')
                        停用
                    #elseif($!item.status == '1')
                        欠费
                    #elseif($!item.status == '2')
                        新建
                    #else
                        正常
                    #end
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-xs btn-alt btn_view" value="$item.id">查看</button>
                        <button type="button" class="btn btn-xs btn-alt btn_edit" value="$item.id">编辑</button>
                        <button type="button" class="btn btn-xs btn-alt btn_delete" value="$item.id">删除</button>
                    </div>
                </td>
            </tr>
            #end
        </tbody>
    </table>
    #parse('/page.vm')
</div>
<div class="modal fade" id="formModal" tabindex="-1" role="dialog"></div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">删除确认</h4>
            </div>
            <div class="modal-body">
                <p>确认删除选中的数据吗...</p>
            </div>
            <div class="modal-footer">
                <div class="pull-right">
                    <button type="button" class="btn btn-sm btn_delete">确认</button>
                    <button type="button" class="btn btn-sm" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/module/corporation/index.js"></script>
