<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">人资主数据</a></li>
    <li class="active">用户列表</li>
    <li><a href="javascript:void(0)" data-toggle="modal"
           onclick="openModuleInModal('/user/add', 'formModal')">新增</a>
    </li>
    <li><a href="javascript:void(0)" onclick="deleteSelected()">删除</a></li>
</ol>
<div class="block-area">
    <input class="input-sm col-md-4 message-search table-payload" type="text" placeholder="Search....">
    <table id="user-grid" class="table table-condensed table-hover table-striped tile list-container">
        <thead>
        <tr>
            <th><input type="checkbox" class="pull-left list-parent-check" value=""></th>
            <th>序号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>出生日期</th>
            <th>联系电话</th>
            <th>邮箱</th>
            <th>QQ</th>
            <th>微信</th>
            <th>微博</th>
            <th>头像</th>
            <th>等级</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
            #foreach($item in $page.result)
            <tr>
                <td><input type="checkbox" class="pull-left list-check" value="$item.id"></td>
                <td>$!velocityCount</td>
                <td>$!item.realName</td>
                <td>$!item.sex</td>
                <td>$!dateTool.format('yyyy-MM-dd',$!item.birthday)</td>
                <td>$!item.telephone</td>
                <td>$!item.email</td>
                <td>$!item.qq</td>
                <td>$!item.wx</td>
                <td>$!item.weiBo</td>
                <td>
                    <button type="button" class="btn btn-xs btn-alt btn_photo" value="$!item.photo">查看</button>
                </td>
                <td>$!item.level</td>
                <td>#if($!item.status == '1')
                    在职
                #else
                    离职
                #end</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-xs btn-alt btn_view" value="$item.id">查看</button>
                        <button type="button" class="btn btn-xs btn-alt btn_edit" value="$item.id">编辑</button>
                        <button type="button" class="btn btn-xs btn-alt btn_delete" value="$item.id">删除</button>
                    </div>
                </td>
            </tr>
            #end
        </tbody>
    </table>
    #parse('/page.vm')
</div>
<div class="modal fade" id="formModal" tabindex="-1" role="dialog"></div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">删除确认</h4>
            </div>
            <div class="modal-body">
                <p>确认删除选中的数据吗...</p>
            </div>
            <div class="modal-footer">
                <div class="pull-right">
                <button type="button" class="btn btn-sm btn_delete">确认</button>
                <button type="button" class="btn btn-sm" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/module/user/index.js"></script>
